---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Works of St. Thomas Aquinas in Latin and English' } = Astro.props;
const fullTitle = title === 'Home' ? 'Works of Thomas Aquinas' : `${title} | Works of Thomas Aquinas`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{fullTitle}</title>
    <link rel="canonical" href={Astro.url} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Works of Thomas Aquinas" />

    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#fffef8" />

    <style is:global>
      :root {
        --color-bg: #fffef8;
        --color-bg-alt: #fff8e7;
        --color-text: #2d2a24;
        --color-text-muted: #5c5650;
        --color-link: #8b4513;
        --color-link-hover: #a0522d;
        --color-border: #e8e0d0;
        --color-focus: #4a90d9;
        --font-serif: 'Palatino Linotype', Palatino, 'Book Antiqua', Georgia, serif;
        --font-sans: system-ui, -apple-system, sans-serif;
        --max-width: 900px;
        --line-height: 1.7;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      * {
        margin: 0;
        padding: 0;
      }

      html {
        font-size: 18px;
        line-height: var(--line-height);
        scroll-behavior: smooth;
      }

      @media (max-width: 600px) {
        html {
          font-size: 16px;
        }
      }

      body {
        font-family: var(--font-serif);
        background-color: var(--color-bg);
        color: var(--color-text);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Focus styles for accessibility */
      :focus-visible {
        outline: 2px solid var(--color-focus);
        outline-offset: 2px;
      }

      a {
        color: var(--color-link);
        text-decoration: none;
        text-underline-offset: 0.15em;
      }

      a:hover {
        color: var(--color-link-hover);
        text-decoration: underline;
      }

      /* Skip link for keyboard navigation */
      .skip-link {
        position: absolute;
        top: -100%;
        left: 50%;
        transform: translateX(-50%);
        background: var(--color-text);
        color: var(--color-bg);
        padding: 0.5rem 1rem;
        border-radius: 0 0 4px 4px;
        z-index: 100;
        font-size: 0.875rem;
      }

      .skip-link:focus {
        top: 0;
      }

      main {
        flex: 1;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem 1.5rem;
        width: 100%;
      }

      @media (max-width: 600px) {
        main {
          padding: 1.5rem 1rem;
        }
      }

      h1, h2, h3, h4, h5, h6 {
        line-height: 1.3;
        margin-bottom: 0.5em;
        font-weight: 600;
      }

      h1 {
        font-size: 2rem;
        letter-spacing: -0.02em;
      }

      h2 {
        font-size: 1.5rem;
        letter-spacing: -0.01em;
      }

      h3 {
        font-size: 1.25rem;
      }

      @media (max-width: 600px) {
        h1 { font-size: 1.75rem; }
        h2 { font-size: 1.35rem; }
        h3 { font-size: 1.15rem; }
      }

      p {
        margin-bottom: 1em;
      }

      /* Improve text readability */
      p, li, dd {
        max-width: 65ch;
      }

      /* Selection styling */
      ::selection {
        background-color: #d4c4a8;
        color: var(--color-text);
      }

      /* Print styles */
      @media print {
        .nav, .footer, .skip-link {
          display: none;
        }

        main {
          max-width: 100%;
          padding: 0;
        }
      }
    </style>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <header role="banner">
      <nav class="nav" aria-label="Main navigation">
        <div class="nav-inner">
          <a href="/" class="nav-brand">Works of Thomas Aquinas</a>
          <ul class="nav-links" role="list">
            <li><a href="/works/">Works</a></li>
            <li><a href="/thomas/">Legacy Index</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main id="main-content" role="main">
      <slot />
    </main>

    <footer class="footer" role="contentinfo">
      <div class="footer-inner">
        <p>
          Originally compiled by <a href="http://www.dhspriory.org/kenny">Fr. Joseph Kenny, O.P.</a> (1936-2013)
        </p>
        <p>
          <a href="https://docs.google.com/forms/d/18taBhNWbW7525BkD_eItBsEhrqrRcmB7n4yLPsrGeLo/viewform">Submit Feedback</a>
          &bull;
          <a href="http://www.corpusthomisticum.org/iopera.html">Corpus Thomisticum</a>
        </p>
      </div>
    </footer>

    <style>
      .nav {
        background-color: var(--color-bg-alt);
        border-bottom: 1px solid var(--color-border);
        padding: 1rem 1.5rem;
      }

      @media (max-width: 600px) {
        .nav {
          padding: 0.875rem 1rem;
        }
      }

      .nav-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.75rem;
      }

      .nav-brand {
        font-size: 1.25rem;
        font-weight: 600;
      }

      @media (max-width: 600px) {
        .nav-brand {
          font-size: 1.1rem;
        }
      }

      .nav-links {
        display: flex;
        gap: 1.5rem;
        list-style: none;
      }

      @media (max-width: 600px) {
        .nav-links {
          gap: 1rem;
          font-size: 0.95rem;
        }
      }

      .footer {
        background-color: var(--color-bg-alt);
        border-top: 1px solid var(--color-border);
        padding: 2rem 1.5rem;
        margin-top: auto;
      }

      @media (max-width: 600px) {
        .footer {
          padding: 1.5rem 1rem;
        }
      }

      .footer-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        text-align: center;
        color: var(--color-text-muted);
        font-size: 0.875rem;
      }

      .footer p {
        margin-bottom: 0.5em;
      }

      .footer p:last-child {
        margin-bottom: 0;
      }
    </style>
  </body>
</html>
