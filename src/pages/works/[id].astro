---
import Base from '@/layouts/Base.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const works = await getCollection('works');
  return works.map((work) => ({
    params: { id: work.id },
    props: { work },
  }));
}

const { work } = Astro.props;
const { title, latinTitle, category, languages, parts, source, translator } = work.data;

const categoryLabels: Record<string, string> = {
  'major-theological': 'Major Theological Works',
  'quaestiones-disputatae': 'Quaestiones Disputatae',
  'opuscula': 'Opuscula',
  'aristotle-commentary': 'Commentaries on Aristotle',
  'biblical-commentary': 'Biblical Commentaries',
  'other-commentary': 'Other Commentaries',
  'popular': 'Popular Works',
};

const hasLatinEnglish = !!languages.latinEnglish;
const hasEnglishOnly = !!languages.english;
---

<Base title={title} description={`${title} by St. Thomas Aquinas - ${latinTitle || ''}`}>
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <ol>
      <li><a href="/">Home</a></li>
      <li><span class="separator">&#10095;</span></li>
      <li><a href="/works/">Works</a></li>
      <li><span class="separator">&#10095;</span></li>
      <li><a href={`/works/?category=${category}`}>{categoryLabels[category]}</a></li>
      <li><span class="separator">&#10095;</span></li>
      <li aria-current="page">{title}</li>
    </ol>
  </nav>

  <article class="work-detail">
    <header class="work-header">
      <div class="header-ornament">&#10087;</div>
      <span class="category-badge">{categoryLabels[category]}</span>
      <h1>{title}</h1>
      {latinTitle && latinTitle !== title && (
        <p class="latin-title">{latinTitle}</p>
      )}
      <div class="language-tags">
        {hasLatinEnglish && (
          <span class="lang-tag lang-bilingual">Latin & English</span>
        )}
        {hasEnglishOnly && (
          <span class="lang-tag lang-english">English Translation</span>
        )}
      </div>
    </header>

    {(source || translator) && (
      <section class="metadata-card">
        <h2 class="metadata-title">About This Text</h2>
        <dl class="metadata-list">
          {source && (
            <>
              <dt>Source</dt>
              <dd>{source}</dd>
            </>
          )}
          {translator && (
            <>
              <dt>Translator</dt>
              <dd>{translator}</dd>
            </>
          )}
        </dl>
      </section>
    )}

    <section class="access-section">
      <h2>Read the Text</h2>
      <div class="access-grid">
        {languages.latinEnglish && (
          <a href={languages.latinEnglish} class="access-card primary">
            <div class="card-icon">&#128214;</div>
            <div class="card-content">
              <span class="card-title">Latin & English</span>
              <span class="card-desc">Bilingual edition with original Latin text and English translation side by side</span>
            </div>
            <span class="card-arrow">&#8594;</span>
          </a>
        )}
        {languages.english && (
          <a href={languages.english} class="access-card">
            <div class="card-icon">&#128196;</div>
            <div class="card-content">
              <span class="card-title">English Only</span>
              <span class="card-desc">English translation for easier reading</span>
            </div>
            <span class="card-arrow">&#8594;</span>
          </a>
        )}
      </div>
    </section>

    {parts && parts.length > 0 && (
      <section class="parts-section">
        <h2>Structure</h2>
        <p class="parts-intro">This work is divided into {parts.length} parts:</p>
        <ul class="parts-list">
          {parts.map((part, index) => (
            <li class="part-item" style={`--delay: ${index * 0.05}s`}>
              <a href={part.path || languages.latinEnglish}>
                <span class="part-id">{part.id}</span>
                <span class="part-title">{part.title}</span>
                <span class="part-arrow">&#8594;</span>
              </a>
            </li>
          ))}
        </ul>
      </section>
    )}

    <footer class="work-footer">
      <div class="footer-divider">
        <span class="divider-ornament">&#10070;</span>
      </div>
      <a href="/works/" class="back-link">
        <span class="back-arrow">&#8592;</span>
        Back to all works
      </a>
    </footer>
  </article>

  <style>
    .breadcrumb {
      margin-bottom: 2rem;
      font-family: var(--font-sans);
      font-size: 0.8rem;
    }

    .breadcrumb ol {
      display: flex;
      flex-wrap: wrap;
      list-style: none;
      align-items: center;
      gap: 0.5rem;
    }

    .breadcrumb a {
      color: var(--color-text-muted);
      text-decoration: none;
      transition: color var(--transition-fast);
    }

    .breadcrumb a:hover {
      color: var(--color-accent);
      text-decoration: underline;
    }

    .breadcrumb .separator {
      color: var(--color-border);
      font-size: 0.65rem;
    }

    .breadcrumb li[aria-current="page"] {
      color: var(--color-text);
      font-weight: 500;
    }

    .work-header {
      text-align: center;
      margin-bottom: 2.5rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--color-border);
    }

    .header-ornament {
      font-size: 1.75rem;
      color: var(--color-accent);
      margin-bottom: 1rem;
      opacity: 0.6;
    }

    .category-badge {
      display: inline-block;
      font-family: var(--font-heading);
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--color-accent);
      padding: 0.35rem 0.75rem;
      border: 1px solid var(--color-accent);
      border-radius: 2px;
      margin-bottom: 1rem;
    }

    .work-detail h1 {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      line-height: 1.2;
    }

    @media (max-width: 600px) {
      .work-detail h1 {
        font-size: 1.75rem;
      }
    }

    .latin-title {
      font-style: italic;
      color: var(--color-text-muted);
      font-size: 1.25rem;
      margin-bottom: 1rem;
    }

    .language-tags {
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .lang-tag {
      font-family: var(--font-sans);
      font-size: 0.75rem;
      font-weight: 500;
      padding: 0.3rem 0.6rem;
      border-radius: 3px;
    }

    .lang-bilingual {
      background-color: var(--color-accent);
      color: #ffffff;
    }

    .lang-english {
      background-color: var(--color-navy);
      color: #ffffff;
    }

    .metadata-card {
      background-color: var(--color-bg-card);
      border: 1px solid var(--color-border);
      border-radius: 6px;
      padding: 1.5rem;
      margin-bottom: 2.5rem;
    }

    .metadata-title {
      font-size: 1rem;
      margin-bottom: 1rem;
      color: var(--color-text);
    }

    .metadata-list {
      display: grid;
      gap: 0.75rem;
    }

    .metadata-list dt {
      font-family: var(--font-sans);
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: var(--color-text-muted);
      margin-bottom: 0.15rem;
    }

    .metadata-list dd {
      margin: 0;
      color: var(--color-text);
    }

    .access-section {
      margin-bottom: 2.5rem;
    }

    .access-section h2 {
      margin-bottom: 1.25rem;
    }

    .access-grid {
      display: grid;
      gap: 1rem;
    }

    @media (min-width: 600px) {
      .access-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    .access-card {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      padding: 1.5rem;
      background-color: var(--color-bg-card);
      border: 2px solid var(--color-border);
      border-radius: 6px;
      text-decoration: none;
      transition: all var(--transition-normal);
      position: relative;
    }

    .access-card:hover {
      border-color: var(--color-accent);
      text-decoration: none;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px var(--color-shadow);
    }

    .access-card:hover .card-arrow {
      opacity: 1;
      transform: translateX(0);
    }

    .access-card.primary {
      border-color: var(--color-accent);
      background-color: var(--color-highlight);
    }

    .card-icon {
      font-size: 1.75rem;
      flex-shrink: 0;
      opacity: 0.7;
    }

    .card-content {
      flex: 1;
    }

    .card-title {
      display: block;
      font-family: var(--font-heading);
      font-size: 1.1rem;
      font-weight: 500;
      color: var(--color-text);
      margin-bottom: 0.35rem;
    }

    .card-desc {
      display: block;
      font-size: 0.9rem;
      color: var(--color-text-muted);
      line-height: 1.5;
    }

    .card-arrow {
      font-size: 1.25rem;
      color: var(--color-accent);
      opacity: 0;
      transform: translateX(-4px);
      transition: all var(--transition-fast);
      align-self: center;
    }

    .parts-section {
      margin-bottom: 2.5rem;
    }

    .parts-section h2 {
      margin-bottom: 0.5rem;
    }

    .parts-intro {
      color: var(--color-text-muted);
      margin-bottom: 1.25rem;
    }

    .parts-list {
      list-style: none;
      display: grid;
      gap: 0.5rem;
    }

    .part-item {
      animation: fadeSlideIn 0.3s ease forwards;
      animation-delay: var(--delay, 0s);
      opacity: 0;
    }

    @keyframes fadeSlideIn {
      from {
        opacity: 0;
        transform: translateX(-8px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .part-item a {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.875rem 1rem;
      background-color: var(--color-bg-card);
      border: 1px solid var(--color-border);
      border-radius: 4px;
      text-decoration: none;
      transition: all var(--transition-fast);
    }

    .part-item a:hover {
      border-color: var(--color-accent);
      text-decoration: none;
      transform: translateX(4px);
    }

    .part-item a:hover .part-arrow {
      opacity: 1;
    }

    .part-id {
      font-family: var(--font-heading);
      font-size: 0.8rem;
      font-weight: 600;
      color: var(--color-accent);
      min-width: 2rem;
    }

    .part-title {
      flex: 1;
      color: var(--color-text);
    }

    .part-arrow {
      color: var(--color-accent);
      opacity: 0;
      transition: opacity var(--transition-fast);
    }

    .work-footer {
      padding-top: 2rem;
    }

    .footer-divider {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
    }

    .footer-divider::before,
    .footer-divider::after {
      content: '';
      flex: 1;
      height: 1px;
      background: linear-gradient(to var(--dir, right), var(--color-border), transparent);
      max-width: 100px;
    }

    .footer-divider::after {
      --dir: left;
    }

    .divider-ornament {
      padding: 0 1rem;
      color: var(--color-accent);
      opacity: 0.5;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-family: var(--font-heading);
      font-size: 0.9rem;
      letter-spacing: 0.03em;
      color: var(--color-text-muted);
      text-decoration: none;
      transition: color var(--transition-fast);
    }

    .back-link:hover {
      color: var(--color-accent);
      text-decoration: none;
    }

    .back-arrow {
      transition: transform var(--transition-fast);
    }

    .back-link:hover .back-arrow {
      transform: translateX(-3px);
    }
  </style>
</Base>
