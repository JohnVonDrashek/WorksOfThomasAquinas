---
import type { SummaQuestion } from '../../lib/summa/parser';
import { getArticleUrl, getQuestionUrl, SUMMA_PARTS } from '../../lib/summa/parser';

interface Props {
  question: SummaQuestion;
  totalQuestions: number;
}

const { question, totalQuestions } = Astro.props;

const partInfo = SUMMA_PARTS[question.part as keyof typeof SUMMA_PARTS];

// Navigation URLs
const prevUrl = question.question > 1
  ? getQuestionUrl(question.part, question.question - 1)
  : null;
const nextUrl = question.question < totalQuestions
  ? getQuestionUrl(question.part, question.question + 1)
  : null;
---

<div class="question-page">
  <!-- Breadcrumb -->
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <a href="/thomas/summa">Summa Theologica</a>
    <span class="sep">›</span>
    <a href={`/thomas/summa/${question.part}`}>{partInfo.name}</a>
    <span class="sep">›</span>
    <span class="current">Question {question.question}</span>
  </nav>

  <!-- Question Header -->
  <header class="question-header">
    <div class="question-number">Question {question.question}</div>
    <h1 class="question-title">{question.title}</h1>
    {question.prologue.english && (
      <p class="question-prologue">{question.prologue.english}</p>
    )}
  </header>

  <!-- Articles List -->
  <section class="articles-section">
    <h2 class="articles-heading">Articles ({question.articles.length})</h2>
    <ol class="articles-list">
      {question.articles.map((article) => (
        <li class="article-item">
          <a href={getArticleUrl(question.part, question.question, article.article)}>
            <span class="article-num">Article {article.article}</span>
            <span class="article-title">{article.title || `Article ${article.article}`}</span>
          </a>
        </li>
      ))}
    </ol>
  </section>

  <!-- Question Navigation -->
  <nav class="question-nav">
    <div class="nav-prev">
      {prevUrl ? (
        <a href={prevUrl}>
          <span class="nav-arrow">←</span>
          <span class="nav-label">Question {question.question - 1}</span>
        </a>
      ) : (
        <span class="nav-disabled"></span>
      )}
    </div>
    <div class="nav-current">
      Question {question.question} of {totalQuestions}
    </div>
    <div class="nav-next">
      {nextUrl ? (
        <a href={nextUrl}>
          <span class="nav-label">Question {question.question + 1}</span>
          <span class="nav-arrow">→</span>
        </a>
      ) : (
        <span class="nav-disabled"></span>
      )}
    </div>
  </nav>
</div>

<style>
  .question-page {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Breadcrumb */
  .breadcrumb {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .breadcrumb .sep {
    margin: 0 0.5rem;
    opacity: 0.5;
  }

  .breadcrumb .current {
    color: var(--color-text);
    font-weight: 500;
  }

  /* Question Header */
  .question-header {
    text-align: center;
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .question-number {
    font-family: var(--font-sans);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: 0.75rem;
  }

  .question-title {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.3;
    margin: 0 0 1rem 0;
  }

  .question-prologue {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Articles Section */
  .articles-section {
    margin-bottom: 2rem;
  }

  .articles-heading {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .articles-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .article-item {
    border-bottom: 1px solid var(--color-border-light);
  }

  .article-item:last-child {
    border-bottom: none;
  }

  .article-item a {
    display: flex;
    flex-direction: column;
    padding: 1rem 0;
    text-decoration: none;
    transition: background 0.2s;
    border-radius: 4px;
    padding-left: 0.5rem;
    margin-left: -0.5rem;
    padding-right: 0.5rem;
  }

  .article-item a:hover {
    background: var(--color-bg-alt);
  }

  .article-num {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
    margin-bottom: 0.25rem;
  }

  .article-title {
    font-family: var(--font-body);
    font-size: 1.05rem;
    color: var(--color-text);
    line-height: 1.4;
  }

  /* Question Navigation */
  .question-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    font-family: var(--font-sans);
  }

  .question-nav a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .question-nav a:hover {
    background: var(--color-bg-alt);
  }

  .nav-arrow {
    font-size: 1.1rem;
  }

  .nav-label {
    font-size: 0.9rem;
  }

  .nav-current {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .nav-disabled {
    width: 120px;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .question-page {
      padding: 1rem;
    }

    .question-title {
      font-size: 1.4rem;
    }

    .question-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-disabled {
      display: none;
    }
  }
</style>
