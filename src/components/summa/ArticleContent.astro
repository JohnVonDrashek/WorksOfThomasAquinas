---
import type { SummaArticle } from '../../lib/summa/parser';
import { getArticleUrl, SUMMA_PARTS } from '../../lib/summa/parser';

interface Props {
  article: SummaArticle;
  totalArticles: number;
}

const { article, totalArticles } = Astro.props;

const partInfo = SUMMA_PARTS[article.part as keyof typeof SUMMA_PARTS];

// Navigation URLs
const prevUrl = article.article > 1
  ? getArticleUrl(article.part, article.question, article.article - 1)
  : null;
const nextUrl = article.article < totalArticles
  ? getArticleUrl(article.part, article.question, article.article + 1)
  : null;
---

<article class="summa-article" data-part={article.part} data-question={article.question} data-article={article.article}>
  <!-- Language Toggle -->
  <div class="language-toggle">
    <button class="lang-btn active" data-lang="en">English</button>
    <button class="lang-btn" data-lang="la">Latin</button>
  </div>

  <!-- Breadcrumb -->
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <a href="/thomas/summa">Summa Theologica</a>
    <span class="sep">›</span>
    <a href={`/thomas/summa/${article.part}`}>{partInfo.name}</a>
    <span class="sep">›</span>
    <a href={`/thomas/summa/${article.part}/Q${article.question}`}>Question {article.question}</a>
    <span class="sep">›</span>
    <span class="current">Article {article.article}</span>
  </nav>

  <!-- Article Header -->
  <header class="article-header">
    <div class="article-number">Article {article.article}</div>
    <h1 class="article-title">{article.title}</h1>
  </header>

  <!-- Main Answer (I Answer That) - Always visible -->
  <section class="respondeo">
    <h2>I answer that</h2>
    <div class="content">
      <div class="text-en">{article.respondeo.english}</div>
      <div class="text-la" hidden>{article.respondeo.latin}</div>
    </div>
  </section>

  <!-- Objections - Collapsible -->
  {article.objections.length > 0 && (
    <details class="objections-section">
      <summary>
        <span class="section-title">Objections ({article.objections.length})</span>
        <span class="toggle-icon"></span>
      </summary>
      <div class="section-content">
        {article.objections.map((obj) => (
          <div class="objection">
            <h3>Objection {obj.number}</h3>
            <div class="text-en">{obj.english}</div>
            <div class="text-la" hidden>{obj.latin}</div>
          </div>
        ))}
      </div>
    </details>
  )}

  <!-- On the Contrary - Collapsible -->
  {article.sedContra.english && (
    <details class="sed-contra-section">
      <summary>
        <span class="section-title">On the contrary</span>
        <span class="toggle-icon"></span>
      </summary>
      <div class="section-content">
        <div class="text-en">{article.sedContra.english}</div>
        <div class="text-la" hidden>{article.sedContra.latin}</div>
      </div>
    </details>
  )}

  <!-- Replies to Objections - Collapsible -->
  {article.replies.length > 0 && (
    <details class="replies-section">
      <summary>
        <span class="section-title">Replies to Objections ({article.replies.length})</span>
        <span class="toggle-icon"></span>
      </summary>
      <div class="section-content">
        {article.replies.map((reply) => (
          <div class="reply">
            <h3>Reply to Objection {reply.number}</h3>
            <div class="text-en">{reply.english}</div>
            <div class="text-la" hidden>{reply.latin}</div>
          </div>
        ))}
      </div>
    </details>
  )}

  <!-- Article Navigation -->
  <nav class="article-nav">
    <div class="nav-prev">
      {prevUrl ? (
        <a href={prevUrl}>
          <span class="nav-arrow">←</span>
          <span class="nav-label">Article {article.article - 1}</span>
        </a>
      ) : (
        <span class="nav-disabled"></span>
      )}
    </div>
    <div class="nav-current">
      Article {article.article} of {totalArticles}
    </div>
    <div class="nav-next">
      {nextUrl ? (
        <a href={nextUrl}>
          <span class="nav-label">Article {article.article + 1}</span>
          <span class="nav-arrow">→</span>
        </a>
      ) : (
        <span class="nav-disabled"></span>
      )}
    </div>
  </nav>
</article>

<script>
  // Language toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const article = document.querySelector('.summa-article');
    if (!article) return;

    const langBtns = article.querySelectorAll('.lang-btn');
    const enTexts = article.querySelectorAll('.text-en');
    const laTexts = article.querySelectorAll('.text-la');

    langBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const lang = btn.getAttribute('data-lang');

        // Update active button
        langBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Toggle text visibility
        if (lang === 'la') {
          enTexts.forEach(el => el.setAttribute('hidden', ''));
          laTexts.forEach(el => el.removeAttribute('hidden'));
        } else {
          laTexts.forEach(el => el.setAttribute('hidden', ''));
          enTexts.forEach(el => el.removeAttribute('hidden'));
        }

        // Store preference
        localStorage.setItem('summa-lang', lang || 'en');
      });
    });

    // Restore language preference
    const savedLang = localStorage.getItem('summa-lang');
    if (savedLang === 'la') {
      const laBtn = article.querySelector('[data-lang="la"]');
      if (laBtn) (laBtn as HTMLButtonElement).click();
    }
  });
</script>

<style>
  .summa-article {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Language Toggle */
  .language-toggle {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    justify-content: flex-end;
  }

  .lang-btn {
    padding: 0.4rem 1rem;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    color: var(--color-text-muted);
    font-family: var(--font-sans);
    font-size: 0.85rem;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .lang-btn:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .lang-btn.active {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  /* Breadcrumb */
  .breadcrumb {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .breadcrumb .sep {
    margin: 0 0.5rem;
    opacity: 0.5;
  }

  .breadcrumb .current {
    color: var(--color-text);
    font-weight: 500;
  }

  /* Article Header */
  .article-header {
    text-align: center;
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .article-number {
    font-family: var(--font-sans);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: 0.75rem;
  }

  .article-title {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.3;
    margin: 0;
  }

  /* Content Sections */
  .respondeo {
    margin-bottom: 2rem;
  }

  .respondeo h2 {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-burgundy);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .respondeo .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  /* Collapsible Sections */
  details {
    margin-bottom: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    overflow: hidden;
  }

  details summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    background: var(--color-bg-alt);
    cursor: pointer;
    user-select: none;
    list-style: none;
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details summary::marker {
    display: none;
  }

  .section-title {
    font-family: var(--font-heading);
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text);
  }

  .toggle-icon::after {
    content: '+';
    font-size: 1.25rem;
    color: var(--color-text-muted);
    font-weight: 300;
  }

  details[open] .toggle-icon::after {
    content: '−';
  }

  .section-content {
    padding: 1.25rem;
    background: var(--color-bg);
  }

  /* Objection/Reply styling */
  .objection,
  .reply {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border-light);
  }

  .objection:last-child,
  .reply:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .objection h3,
  .reply h3 {
    font-family: var(--font-heading);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-burgundy);
    margin-bottom: 0.75rem;
  }

  .objection .text-en,
  .objection .text-la,
  .reply .text-en,
  .reply .text-la,
  .section-content > .text-en,
  .section-content > .text-la {
    line-height: 1.7;
    color: var(--color-text);
  }

  /* Article Navigation */
  .article-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    font-family: var(--font-sans);
  }

  .article-nav a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .article-nav a:hover {
    background: var(--color-bg-alt);
  }

  .nav-arrow {
    font-size: 1.1rem;
  }

  .nav-label {
    font-size: 0.9rem;
  }

  .nav-current {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .nav-disabled {
    width: 100px;
  }

  /* Latin text styling */
  .text-la {
    color: var(--color-text-muted);
  }

  /* Hidden state */
  [hidden] {
    display: none !important;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .summa-article {
      padding: 1rem;
    }

    .article-title {
      font-size: 1.4rem;
    }

    .article-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-disabled {
      display: none;
    }
  }
</style>
