---
interface Props {
  categories: { id: string; label: string; count: number }[];
}

const { categories } = Astro.props;
const totalWorks = categories.reduce((sum, cat) => sum + cat.count, 0);
---

<div class="works-filter">
  <div class="filter-header">
    <span class="filter-icon">&#128270;</span>
    <h2 class="filter-title">Find Works</h2>
  </div>

  <div class="search-box">
    <label for="work-search" class="visually-hidden">Search works by title</label>
    <div class="search-input-wrapper">
      <span class="search-icon">&#128269;</span>
      <input
        type="search"
        id="work-search"
        placeholder="Search by title in Latin or English..."
        autocomplete="off"
      />
    </div>
  </div>

  <div class="category-filters">
    <span class="filter-label">Categories:</span>
    <div class="filter-buttons">
      <button class="filter-btn active" data-category="all">
        <span class="btn-text">All Works</span>
        <span class="btn-count">{totalWorks}</span>
      </button>
      {categories.map(({ id, label, count }) => (
        <button class="filter-btn" data-category={id}>
          <span class="btn-text">{label}</span>
          <span class="btn-count">{count}</span>
        </button>
      ))}
    </div>
  </div>

  <div class="results-count" aria-live="polite">
    <span id="results-text"></span>
  </div>
</div>

<script>
  function initFilter() {
    const searchInput = document.getElementById('work-search') as HTMLInputElement;
    const filterButtons = document.querySelectorAll('.filter-btn');
    const workCards = document.querySelectorAll('.work-card');
    const resultsText = document.getElementById('results-text');
    const categorySections = document.querySelectorAll('.category-section');

    let currentCategory = 'all';
    let currentSearch = '';

    function updateResults() {
      let visibleCount = 0;
      const searchLower = currentSearch.toLowerCase();

      // Hide/show category sections based on filter
      categorySections.forEach((section) => {
        const sectionCategory = section.id;
        if (currentCategory === 'all' || sectionCategory === currentCategory) {
          (section as HTMLElement).style.display = '';
        } else {
          (section as HTMLElement).style.display = 'none';
        }
      });

      // Filter individual cards by search
      workCards.forEach((card) => {
        const title = card.querySelector('.title')?.textContent?.toLowerCase() || '';
        const latinTitle = card.querySelector('.latin-title')?.textContent?.toLowerCase() || '';
        const section = card.closest('.category-section');
        const sectionCategory = section?.id || '';

        const matchesCategory = currentCategory === 'all' || sectionCategory === currentCategory;
        const matchesSearch = !searchLower ||
          title.includes(searchLower) ||
          latinTitle.includes(searchLower);

        if (matchesCategory && matchesSearch) {
          (card as HTMLElement).style.display = '';
          visibleCount++;
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });

      // Update section visibility based on whether they have visible cards
      categorySections.forEach((section) => {
        const visibleCards = section.querySelectorAll('.work-card:not([style*="display: none"])');
        if (visibleCards.length === 0) {
          (section as HTMLElement).style.display = 'none';
        }
      });

      // Update results text
      if (resultsText) {
        if (currentSearch || currentCategory !== 'all') {
          resultsText.textContent = `Showing ${visibleCount} work${visibleCount !== 1 ? 's' : ''}`;
        } else {
          resultsText.textContent = '';
        }
      }
    }

    // Search input handler
    searchInput?.addEventListener('input', (e) => {
      currentSearch = (e.target as HTMLInputElement).value;
      updateResults();
    });

    // Filter button handlers
    filterButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        filterButtons.forEach((b) => b.classList.remove('active'));
        btn.classList.add('active');
        currentCategory = btn.getAttribute('data-category') || 'all';
        updateResults();
      });
    });

    // Check URL for initial category filter
    const urlParams = new URLSearchParams(window.location.search);
    const categoryParam = urlParams.get('category');
    if (categoryParam) {
      const matchingBtn = document.querySelector(`[data-category="${categoryParam}"]`);
      if (matchingBtn) {
        filterButtons.forEach((b) => b.classList.remove('active'));
        matchingBtn.classList.add('active');
        currentCategory = categoryParam;
        updateResults();
      }
    }
  }

  // Run on page load
  initFilter();

  // Re-run on Astro page transitions (if using View Transitions)
  document.addEventListener('astro:page-load', initFilter);
</script>

